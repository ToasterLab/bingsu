{
  "name": "bingsu",
  "version": "1.0.0",
  "description": "freezes your link references as-is to prevent linkrot",
  "license": "GPLv3",
  "author": "Huey Lee <hello@huey.xyz>",
  "main": "./.webpack/main/index.js",
  "scripts": {
    "build": "webpack",
    "react:dev": "webpack serve --mode=development",
    "electron:dev": "nodemon",
    "start:prod": "npm run build && electron ./dist/main.js",
    "start:dev": "concurrently --kill-others \"npm run react:dev\" \"npm run electron:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    "*.{ts}": [
      "tsc --allowSyntheticDefaultImports --noEmit --esModuleInterop --moduleResolution node --skipLibCheck --resolveJsonModule"
    ],
    "package.json": [
      "npx sort-package-json"
    ]
  },
  "dependencies": {
    "@electron-forge/plugin-webpack": "^6.0.0-beta.57",
    "adm-zip": "^0.5.5",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.7",
    "fastify": "^3.18.1",
    "html-webpack-plugin": "^5.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-hot-loader": "^4.13.0",
    "react-icons": "^4.2.0",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "ts-loader": "^9.2.3",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/adm-zip": "^0.4.34",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "electron": "^13.1.6",
    "electron-is-dev": "^2.0.0",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sonarjs": "^0.8.0-125",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-unicorn": "^34.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5",
    "webpack-dev-server": "^3.11.2"
  },
  "engines": {
    "node": ">=14.17.2"
  },
  "os": [
    "linux"
  ],
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Bingsu",
        "executableName": "bingsu",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Bingsu"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
