{
  "name": "bingsu",
  "version": "0.0.4",
  "description": "prevents linkrot in your documents",
  "license": "GPLv3",
  "author": "Huey Lee <hello@huey.xyz>",
  "main": ".webpack/main",
  "scripts": {
    "build:windows": "electron-forge make --targets @electron-forge/maker-squirrel",
    "build:debian": "electron-forge make --targets @electron-forge/maker-deb",
    "build:macos": "electron-forge make --targets @electron-forge/maker-dmg",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "start": "electron-forge start --inspect-electron"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "tsc-files --noEmit"
    ],
    "package.json": [
      "npx sort-package-json"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Bingsu",
        "executableName": "bingsu"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Bingsu",
            "setupIcon": "./src/assets/img/Bingsu.ico",
            "iconUrl": "https://huey.xyz/bingsu.ico"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "bingsu",
              "productName": "Bingsu",
              "categories": [
                "Utility",
                "Office"
              ],
              "icon": "./src/assets/img/Bingsu.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "Bingsu",
            "icon": "./src/assets/img/Bingsu.ico"
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "nodeIntegration": true,
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/electron/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.5",
    "axios": "^0.21.1",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-dmg": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.59",
    "@types/adm-zip": "^0.4.34",
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "css-loader": "^6.2.0",
    "dotenv": "^10.0.0",
    "electron": "^13.1.8",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^35.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.1",
    "husky": "^7.0.1",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "tsc-files": "^1.1.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=14.17.2"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ]
}
